<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
    <style name="mytoolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="title">@string/myprofile_title</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorB</item>
        <item name="iconTint">@color/colorB</item>
        <item name="android:textColorAlertDialogListItem">@color/colorB</item>
        <item name="android:textColorPrimary">@color/colorB</item>
        <item name="colorAccent">@color/colorB</item>
    </style>

    <style name="settings_toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="title">Settings</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="about_toolbar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="titleTextColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    <item name="title">@string/settings_about</item>
    <item name="android:windowActivityTransitions">true</item>
</style>
    <style name="tos_toolbar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="titleTextColor">@color/colorAccent</item>
    <item name="title">@string/settings_tos</item>
    <item name="android:windowActivityTransitions">true</item>
    <item name="colorControlNormal">@color/colorAccent</item>
</style>
    <style name="pp_toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="title">@string/settings_privacy</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorB</item>
        <item name="android:textColorHint">@color/colorB</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>
