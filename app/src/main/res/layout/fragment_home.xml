<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/logo_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp"
            android:layout_gravity="center"
            android:src="@drawable/sage" />

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#00000f"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/eco"
            android:gravity="center_vertical"
            tools:ignore="PrivateResource,RtlCompat"/>


        <TextView
            android:id="@+id/quoteAuthor"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:gravity="bottom|right"
            android:text=""
            android:textColor="#00000f"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:ignore="PrivateResource,RtlCompat" />



        <TextView
            android:id="@+id/challange_lable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/circle_progress"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="Current Point"
            android:layout_centerHorizontal="true"
            android:textSize="50dp" />
        <!--<CheckedTextView
            android:id="@+id/chanllage_1"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="chanllage 1"
            android:layout_below="@+id/challange_lable"
            android:paddingLeft="20dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_below="@+id/challange_lable"
            android:layout_toRightOf="@+id/chanllage_1"
            android:scaleX="0.5"
            android:scaleY="0.5" />

        <CheckedTextView
            android:id="@+id/chanllage_2"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="chanllage 2"
            android:layout_below="@+id/chanllage_1"
            android:paddingLeft="20dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_below="@+id/chanllage_1"
            android:layout_toRightOf="@+id/chanllage_2"
            android:scaleX="0.5"
            android:scaleY="0.5" />-->

        <Button
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign out"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            />



        <com.example.slidebox.ui.home.CircleProgress
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/quoteText"
            android:id="@+id/circle_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            app:antiAlias="true"
            app:arcWidth="15dp"
            app:dottedLineWidth="12dp"
            app:hint="Points"
            app:bgArcColor="@android:color/darker_gray"
            app:bgArcWidth="2dp"
            app:hintSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"
            app:maxValue="100"
            app:startAngle="135"
            app:sweepAngle="270"
            app:textOffsetPercentInRadius="0.5"
            app:unit="%"
            app:unitSize="15dp"
            app:value="75"
            app:valueSize="15dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/setTarget"
            android:text="SET"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/circle_progress"
            android:textSize="15dp"

            />
        <EditText
            android:id="@+id/edit_target"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/setTarget"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            />







    </RelativeLayout>
</ScrollView>

