<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/closeShopPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="TODO"
        android:layout_marginEnd="7dp"
        android:layout_alignParentStart="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textShopPopup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableBottom="@drawable/coffee"
                    android:gravity="center_horizontal"
                    android:text="Coffee"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal"
                    android:text="Are you sure you want to redeem this item?"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/redeemItem"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_green_round"
                    android:text="yes,redeem!"
                    android:textColor="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_check_white_24dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cancelRedeemItem"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-48.5dp"
                    android:layout_marginLeft="170dp"
                    android:background="@drawable/button_red_round"
                    android:drawableLeft="@drawable/ic_clear_white_24dp"
                    android:text="No, Cancel"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />


            </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>