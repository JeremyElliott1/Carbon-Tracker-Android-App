<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slidebox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.shop.ShoppingCart"></activity>
        <activity android:name=".SettingsPrivacyPolicy" />
        <activity android:name=".SettingsSecurity" />
        <activity android:name=".SettingsTos" />
        <activity android:name=".SettingsAbout" />
        <activity android:name=".MyProfile" />
        <activity android:name=".MyAccountOptions" />
        <activity android:name=".HelpOptions" />
        <activity android:name=".SettingsOptions" />
        <activity android:name=".ui.reusables.ReusablesItemAdd" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SlideBox"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>